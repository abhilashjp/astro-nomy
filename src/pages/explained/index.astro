---
import ExplainedCard from "@/components/cards/explained-card.astro";
import DocsPageHeader from "@/components/page-header.astro";
import DocsLayout from "@/layouts/docs-layout.astro";
import { getPublishedExplained } from '@/lib/content.js';

// Get published explained articles
const explained = await getPublishedExplained();

// Sort by publication date (newest first) and separate featured articles
const sortedExplained = explained.sort((a, b) => 
  new Date(b.data.pubDate) - new Date(a.data.pubDate)
);

const featuredExplained = sortedExplained.filter(article => article.data.featured);
const regularExplained = sortedExplained.filter(article => !article.data.featured);
---

<DocsLayout 
  title="Pricing Explained" 
  description="Deep analysis of AI company pricing models and strategies"
>
  <section class="container max-w-6xl py-10">
    <DocsPageHeader
      heading="Pricing Explained"
      text="This section provides deeper analysis of pricing models of AI companies at the forefront of innovation. Understand the strategies, structures, and economics behind modern AI pricing."
    />

    <!-- Stats Section -->
  <!--   <div class="mb-12 grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="bg-gradient-to-br from-blue-50 to-indigo-50 p-6 rounded-lg border border-blue-100">
        <div class="text-2xl font-bold text-blue-900">{explained.length}</div>
        <div class="text-blue-700 text-sm font-medium">Total Articles</div>
      </div>
      <div class="bg-gradient-to-br from-emerald-50 to-green-50 p-6 rounded-lg border border-emerald-100">
        <div class="text-2xl font-bold text-emerald-900">{featuredExplained.length}</div>
        <div class="text-emerald-700 text-sm font-medium">Featured Analysis</div>
      </div>
      <div class="bg-gradient-to-br from-amber-50 to-orange-50 p-6 rounded-lg border border-amber-100">
        <div class="text-2xl font-bold text-amber-900">{regularExplained.length}</div>
        <div class="text-amber-700 text-sm font-medium">In-Depth Guides</div>
      </div>
    </div>
  -->
    <!-- Featured Articles Section -->
    {featuredExplained.length > 0 && (
      <div class="mb-16">
        <div class="flex items-center gap-3 mb-8">
          <div class="flex items-center gap-2">
            <svg class="w-6 h-6 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
            <h2 class="text-3xl font-bold text-gray-900">Featured Analysis</h2>
          </div>
          <div class="flex-1 h-px bg-gradient-to-r from-gray-200 to-transparent"></div>
        </div>
        
        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
          {featuredExplained.map((article) => (
            <div class="relative">
              <div class="absolute -top-2 -right-2 z-10">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800 border border-yellow-200">
                  Featured
                </span>
              </div>
              <ExplainedCard {...article} />

            </div>
          ))}
        </div>
      </div>
    )}

    <!-- All Articles Section -->
    <div>
      <div class="flex items-center gap-3 mb-8">
        <div class="flex items-center gap-2">
          <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          <h2 class="text-3xl font-bold text-gray-900">All Articles</h2>
        </div>
        <div class="flex-1 h-px bg-gradient-to-r from-gray-200 to-transparent"></div>
      </div>

      {explained.length > 0 ? (
        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
          {sortedExplained.map((article) => (
            <ExplainedCard {...article} />

          ))}
        </div>
      ) : (
        <div class="text-center py-16">
          <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          <h3 class="text-lg font-medium text-gray-900 mb-2">No Articles Yet</h3>
          <p class="text-gray-600 max-w-md mx-auto">
            We're working on comprehensive pricing analysis articles. Check back soon for in-depth insights into AI company pricing strategies.
          </p>
        </div>
      )}
    </div>

    <!-- Newsletter Signup Section -->
    <div class="mt-20 bg-gradient-to-r from-blue-600 to-indigo-700 rounded-2xl p-8 text-center text-white">
      <h3 class="text-2xl font-bold mb-4">Stay Updated on Pricing Trends</h3>
      <p class="text-blue-100 mb-6 max-w-2xl mx-auto">
        Get notified when we publish new pricing analysis and insights from the AI industry's leading companies.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center max-w-md mx-auto">
        <input 
          type="email" 
          placeholder="Enter your email" 
          class="flex-1 px-4 py-3 rounded-lg text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-white focus:ring-opacity-50"
        />
        <button class="px-6 py-3 bg-white text-blue-600 font-semibold rounded-lg hover:bg-blue-50 transition-colors duration-200">
          Subscribe
        </button>
      </div>
    </div>
  </section>
</DocsLayout>