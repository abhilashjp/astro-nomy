---
export const prerender = true;
import { MdxComponents } from "@/components/content/mdx-components";
import GuidePostLayout from "@/layouts/guide-post.astro";
import { getCollection, type CollectionEntry } from "astro:content";

import { getPublishedExplained } from '@/lib/content.js'; // Changed from getPublishedPosts

export async function getStaticPaths() {
  const explained = await getPublishedExplained(); // Changed from getPublishedPosts
  console.log("Explained entries in getStaticPaths:", explained.map(e => e.slug)); // Add this line for debugging
  return explained.map((explained) => ({
    params: { slug: explained.slug },
    props: { explained }, // Keep the object structure
  }));
}

type Props = {
  explained: CollectionEntry<"explained">;
};

const { explained } = Astro.props; // Destructure the guide from props
const { slug } = Astro.params;

// Check if guide exists first
if (!slug || !explained) {
  return new Response(null, {
    status: 404,
    statusText: "Not found",
  });
}

const { Content } = await explained.render();
---

<GuidePostLayout {...explained}>
  <Content components={MdxComponents} />
</GuidePostLayout>