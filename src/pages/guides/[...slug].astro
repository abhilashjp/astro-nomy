---
import { MdxComponents } from "@/components/content/mdx-components";
import GuidePostLayout from "@/layouts/guide-post.astro";
import { getCollection, type CollectionEntry } from "astro:content";

import { getPublishedGuides } from '@/lib/content.js'; // Changed from getPublishedPosts

export async function getStaticPaths() {
  const guides = await getPublishedGuides(); // Changed from getPublishedPosts
  return guides.map((guide) => ({
    params: { slug: guide.slug },
    props: { guide }, // Keep the object structure
  }));
}

type Props = {
  guide: CollectionEntry<"guides">;
};

const { guide } = Astro.props; // Destructure the guide from props
const { slug } = Astro.params;

// Check if guide exists first
if (!slug || !guide) {
  return new Response(null, {
    status: 404,
    statusText: "Not found",
  });
}

const { Content } = await guide.render();
---

<GuidePostLayout {...guide}>
  <Content components={MdxComponents} />
</GuidePostLayout>