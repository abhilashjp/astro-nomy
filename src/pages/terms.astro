---
import MainLayout from "@/layouts/main-layout.astro";
const pageTitle = "Terms and Conditions | UsagePricing.com – Freemium Usage-Based Billing Tool";
const pageDescription = "Read our Terms and Conditions governing your use of UsagePricing.com, our usage-based pricing calculator SaaS.";
